<Window x:Class="Narcissus.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" Background="{x:Null}"  AllowsTransparency="True"
        Title="SettingWindow" Height="400" Width="800"
        WindowStartupLocation="CenterScreen" Opacity="1"
        ShowInTaskbar="False" Topmost="True"
        >
    <Grid>
        <Border CornerRadius="2.5" Background="#80808080" Height="Auto" BorderThickness="0">
            <Label Name="mainLabel" Content="Setting" 
                   FontFamily="./Fonts/#思源黑体 CN Light" FontSize="24" Foreground="AliceBlue" Margin="32,24,588,338"/>
        </Border>
        <Border Margin="0,80,0,80">

        </Border>
        <Border Margin="675,343,24,24">
            <Button Content="Next" Background="#00000000"
                    FontFamily="./Fonts/#思源黑体 CN Light" FontSize="18" Foreground="AliceBlue" />
        </Border>
        <Border Margin="557,343,142,24">
            <Button Content="Back" Background="#00000000"
                    FontFamily="./Fonts/#思源黑体 CN Light" FontSize="18" Foreground="AliceBlue" />
        </Border>
    </Grid>
</Window>
